" $HOME/.vim/vimrc

source $HOME/.vim/init/plug.vimrc       " Plugin List and Loading
source $HOME/.vim/init/plugins.vimrc    " Plugin-Exclusive Settings
source $HOME/.vim/init/general.vimrc    " General Settings
source $HOME/.vim/init/automatic.vimrc  " Automatic Tasks
source $HOME/.vim/init/remaps.vimrc     " Key Remappings
